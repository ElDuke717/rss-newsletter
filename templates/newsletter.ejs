<!DOCTYPE html>
<html>
  <head>
    <style>
      /* Your styles here */
    </style>
  </head>
  <body>
    <div class="newsletter">
      <h1>Daily Newsletter - <%= new Date().toLocaleDateString() %></h1>

      <% articles.forEach(function(article) { %>
      <div class="article">
        <h2>
          <a href="<%= article.link %>" class="article-title"><%= article.title %></a>
        </h2>
        <div class="article-source">
          From: <%= article.feedId?.name || 'Unknown Source' %>
        </div>
        <p>
          <%= article.content ? article.content.substring(0, 150) + '...' :
          article.description || 'No description available' %>
        </p>
      </div>
      <% }); %>

      <div class="footer">
        <p>Generated on <%= new Date().toLocaleDateString() %></p>
      </div>
    </div>
    <hr />
    <p>To unsubscribe, <a href="[Unsubscribe_Link]">click here</a></p>
  </body>
</html>
